# Taski server configuration

server {
    server_tokens off;
    server_name comaash.sytes.net;

        location /api/ {
            
            proxy_pass http://127.0.0.1:8000;
        }
	location /admin/ {
        proxy_pass http://127.0.0.1:8000;
        }

        location / {
        root   /var/www/taski;
        index  index.html index.htm;
        try_files $uri /index.html;
        }
        

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/comaash.sytes.net/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/comaash.sytes.net/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


}



server {
    if ($host = comaash.sytes.net) {
        return 301 https://$host$request_uri;
    } # managed by Certbot



    listen 80;
    server_name comaash.sytes.net;
    return 404; # managed by Certbot


}


# Kittigram server configuration
server {
    server_tokens off;
    server_name ash-kittygram.sytes.net;

        location /media/ {
	    client_max_body_size 20M;		
	    alias /var/www/kittygram/media/;
	}

        location /api/ {

            proxy_pass http://127.0.0.1:8080;
            client_max_body_size 20M;
        }

        location /admin/ {
            proxy_pass http://127.0.0.1:8080;
            client_max_body_size 20M;
        }

        location / {
        root   /var/www/kittygram;
        index  index.html index.htm;
        try_files $uri /index.html;
        }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/comaash.sytes.net/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/comaash.sytes.net/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}

server {
    if ($host = ash-kittygram.sytes.net) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name ash-kittygram.sytes.net;
    return 404; # managed by Certbot


}
